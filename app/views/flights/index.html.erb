<% provide(:title, 'All Flights | ') %>
<h1>Flights</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Airline Name</th>
      <th>Flight Code</th>
      <th>Airplane Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.airline_name %></td>
        <td><%= flight.flight_code %></td>
        <td><%= flight.airplane_type %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<li class="list_style center">
  <%= link_to '<button type="button" class="btn">New Flight</button>'.html_safe,
  new_flight_path %>
</li>
