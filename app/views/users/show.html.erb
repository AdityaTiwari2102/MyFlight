<% provide(:title, @user.name + " | ") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= @user.email %>
      <li class="list_style"><%= link_to "Edit", edit_user_path(current_user) %></li>
    </section>
  </aside>
</div>
